<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="practice"
            type="com.recen.learn.practice1.Practice1" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <com.recen.learn.common.widget.TitleBar
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftButtonClickListener="@{practice.finish}"
            app:title="Practice1" />
        <LinearLayout
            android:layout_below="@+id/titleBar"
            android:layout_marginTop="54dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:layout_marginTop="54dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/txt4_black28"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text='+86'
                    tools:text="+86" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:digits="0123456789"
                    android:hint="请输入手机号码"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="@={practice.formatedPhone}"
                    android:textSize="@dimen/font_28px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/txt4_black28"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="验证码" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textCursorDrawable="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text="@={practice.smsCode}"
                    android:textSize="@dimen/font_28px" />

                <TextView
                    android:id="@+id/tvReceiveSms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="@{practice.smsCodeBtnClick}"
                    android:text="获取验证码"
                    android:textColor="@color/font_blue"
                    android:textSize="@dimen/font_28px" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/divider" />

            <TextView
                style="@style/btn9_78_black"
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:onClick="@{practice.submitBtnClick}"
                android:text="登录" />

        </LinearLayout>
    </RelativeLayout>
</layout>